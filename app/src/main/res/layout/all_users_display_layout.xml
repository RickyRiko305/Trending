<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="0dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/all_users_profile_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="Author"
                    android:textColor="#52575C"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Project Name"
                    android:textColor="#52575C"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/expandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="Up branch to easily missed by do. Admiration considered acceptance too led one melancholy expression."
                        android:textColor="#52575C"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="0dp">

                        <ImageView
                            android:id="@+id/languageName"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/circle_solid"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/language_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#52575C"
                            android:fontFamily="@font/roboto"
                            android:text="c++"
                            android:textSize="12dp"/>

                        <ImageView
                            android:id="@+id/stars_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/star_yellow"/>
                        <TextView
                            android:id="@+id/stars_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#52575C"
                            android:fontFamily="@font/roboto"
                            android:text="3994"
                            android:textSize="12dp"/>

                        <ImageView
                            android:id="@+id/fork_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/fork_black"/>
                        <TextView
                            android:id="@+id/fork_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#52575C"
                            android:fontFamily="@font/roboto"
                            android:text="3994"
                            android:textSize="12dp"/>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>